# Easy management of tests

.SILENT:

########################################################################
# Macros
########################################################################

JQ := /usr/bin/jq --run-tests

TESTS := $(wildcard *.test)

########################################################################
# Patterns
########################################################################

%.log: %.test
	@echo '>>>' $< '<<<'
	$(JQ) $< | tee $@ | grep -v '^Testing'
	-grep -q '^\*\*\*' $@ && touch $<
	@echo

########################################################################
# Rules
########################################################################

all: $(TESTS:.test=.log)

series.log: lib/series.jq lib/stream.jq
stream.log: lib/stream.jq
string.log: lib/icon.jq

########################################################################
# Utilities
########################################################################

clean:
	rm -f *.log

build: clean all

tests: build

# vim:ai:sw=4:ts=4:noet:syntax=make
